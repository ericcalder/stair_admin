<h2>export page</h2>
<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>amount</th>
			<th>balance</th>
			<th>currency</th>
			<th>transaction</th>
		</tr>
	</thead>
	<tbody>
		<% @transactions.each do |tr| %>
		<tr>
			<td><%= tr.tdate %></td>
			<td><%= tr.amt %></td>
			<td><%= tr.bal %></td>
			<td><%= tr.currency %></td>
			<td><%= tr.trans %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div>
	<h3>Export CSV</h3>
	<%= link_to "Export Data", transactions_export_path(format: "csv") %>
</div>